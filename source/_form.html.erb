<!-- Formspree -->

<div class="container submission">
  <h2 >
    Registration
  </h2>
  <% form_tag 'https://formspree.io/brussels@lewagon.org', class:"form-horizontal sm-col col-md-8 col-md-offset-2" do %>
    <div class="form-group">
      <%= label_tag 'First Name', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :first_name, placeholder:"Alan", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'Last Name', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :last_name, placeholder:"Poe", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'Email', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_field_tag :email, placeholder:"alan@poe.com", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'Referer', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_area_tag :referer, placeholder: "Where did you hear about this course? Twitter, Facebook, a friend (who?), etc.", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= label_tag 'Motivation', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= text_area_tag :motivation, placeholder: "Why do you want to attend this course? What is your project?", class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag :submit, value:"Apply now!", class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>
</div>
