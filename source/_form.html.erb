<!-- Formspree -->

<div class="container">
  <% form_tag 'https://formspree.io/brussels@lewagon.org', class:"submission" do %>
  <div class="row">
    <h2>
      Registration
    </h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-lg-2">
    </div>
    <div class="col-xs-12 col-lg-4 form-col">
      <div class="form-item">
        <div class="label-group">
          <i class="fa fa-user"></i> <%= label_tag :first_name %>
        </div>
        <%= text_field_tag :first_name, placeholder:"Alan", :required => true %>
      </div>
      <div class="form-item">
        <div class="label-group">
          <i class="fa fa-font"></i> <%= label_tag :last_name %>
        </div>
        <%= text_field_tag :last_name, placeholder:"Turing", :required => true %>
      </div>
      <div class="form-item">
        <div class="label-group">
          <i class="fa fa-envelope"></i> <%= label_tag :email %>
        </div>
        <%= text_field_tag :email, placeholder:"alan@turing.com", :required => true %>
      </div>
    </div>
    <div class="col-xs-12 col-lg-4 form-col">
      <div class="form-item">
        <div class="label-group">
          <i class="fa fa-comments"></i> <%= label_tag :referer %>
        </div>
        <%= text_area_tag :referer, placeholder: "Where did you hear about this course? Twitter, Facebook, a friend (who?), etc.", :required => true %>
      </div>
      <div class="form-item">
        <div class="label-group">
          <i class="fa fa-thumbs-o-up"></i> <%= label_tag :motivation %>
        </div>
        <%= text_area_tag :motivation, placeholder: "Why do you want to attend this course? What is your project?", :required => true %>
      </div>
    </div>
    <div class="col-xs-12 col-lg-2">
    </div>
  </div>
  <div class="row">
    <div class="form-item">
      <div class="submit">
        <%= submit_tag :submit, value:"Apply now!", class:"btn-submit apply-btn" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
